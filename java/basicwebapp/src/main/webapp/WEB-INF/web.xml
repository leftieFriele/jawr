<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Basic Jawr web app sample</display-name>
  	
	<description>
		
	</description>
	<!-- With config source -->
	<!-- context-param>
		<param-name>jawr.config.sources</param-name>
		<param-value>file:C:\jawr_A.properties,file:C:\jawr_B.properties</param-value>
	</context-param  -->
	<context-param>
		<param-name>jawr.config.sources</param-name>
		<param-value>/additionalConfigA.properties,/additionalConfigB.properties</param-value>
	</context-param>
	<servlet>
		<servlet-name>JavascriptServlet</servlet-name>
		<servlet-class>net.jawr.web.servlet.JawrServlet</servlet-class>
		<init-param>
			<param-name>configLocation</param-name>
			<!-- File path source -->
			<!-- param-value>file:c:\jawr.properties</param-value -->
			<!-- Classpath source -->
			<param-value>/jawr.properties</param-value>
		</init-param>
		<!-- init-param>
			<param-name>mapping</param-name>
			<param-value>/jawr/</param-value>
		</init-param-->
		<!-- Multiple configuration file Source factory -->
		<init-param>
			<param-name>configPropertiesSourceClass</param-name>
			<param-value>net.jawr.web.resource.bundle.factory.util.MultipleFileConfigSource</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>ImgServlet</servlet-name>
		<servlet-class>net.jawr.web.servlet.JawrServlet</servlet-class>
		<init-param>
			<param-name>configLocation</param-name>
			<!-- File path source -->
			<!-- param-value>file:c:\jawr.properties</param-value -->
			<!-- Classpath source -->
			<param-value>/jawr.properties</param-value>
		</init-param>
		<init-param>
			<param-name>type</param-name>
			<param-value>img</param-value>
		</init-param>
		<!-- init-param>
			<param-name>configPropertiesSourceClass</param-name>
			<param-value>net.jawr.web.resource.bundle.factory.util.MultipleFileConfigSource</param-value>
		</init-param-->
		<init-param>
			<param-name>mapping</param-name>
			<param-value>/img/jwrImg/</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>CssServlet</servlet-name>
		<servlet-class>net.jawr.web.servlet.JawrServlet</servlet-class>
		<init-param>
			<param-name>configLocation</param-name>
			<!-- File path source -->
			<!-- param-value>file:c:\jawr.properties</param-value -->
			<!-- Classpath source -->
			<param-value>/jawr.properties</param-value>
		</init-param>
		<init-param>
			<param-name>type</param-name>
			<param-value>css</param-value>
		</init-param>
		<!-- init-param>
			<param-name>configPropertiesSourceClass</param-name>
			<param-value>net.jawr.web.resource.bundle.factory.util.MultipleFileConfigSource</param-value>
		</init-param-->
		<!-- init-param>
			<param-name>mapping</param-name>
			<param-value>/styles/bundle/jwrStyles/</param-value>
		</init-param -->
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<!-- Without mapping-->
	<servlet-mapping>
		<servlet-name>JavascriptServlet</servlet-name>
		<url-pattern>*.js</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CssServlet</servlet-name>
		<url-pattern>*.css</url-pattern>
	</servlet-mapping>
	<!-- servlet-mapping>
		<servlet-name>ImgServlet</servlet-name>
		<url-pattern>*.png</url-pattern>
	</servlet-mapping -->
	<!-- Using mapping-->
	<!-- <servlet-mapping>
		<servlet-name>JavascriptServlet</servlet-name>
		<url-pattern>/jawr/*</url-pattern>
	</servlet-mapping -->
	<!-- servlet-mapping>
		<servlet-name>CssServlet</servlet-name>
		<url-pattern>/styles/bundle/jwrStyles/*</url-pattern>
	</servlet-mapping -->
	<servlet-mapping>
		<servlet-name>ImgServlet</servlet-name>
		<url-pattern>/img/jwrImg/*</url-pattern>
	</servlet-mapping>
	
</web-app>
